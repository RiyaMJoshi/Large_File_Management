{% extends 'base.html.twig' %}

{% block title %}Large File Management Tool{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Manage Your Large CSVs</h1>
    <span class="mb-4">Make CSV files easy to operate by managing them in various ways.</span>
    <form action="{{path('app_upload_file')}}" method="post" class="file-top-margin" enctype="multipart/form-data">
        <div>
            <!-- MAX_FILE_SIZE must precede the file input field -->
            <input type="hidden" name="MAX_FILE_SIZE" value="50000M" />
            <input class="form-control" type="file" id="formFile" name="formFile"  accept=".csv, .zip" required="required">
        </div>

        <div>
            <input class="mt-4 btn btn-primary" type="submit" id="formSubmit" value="Upload File">
        </div>
    </form>
</div>
{% endblock %}
